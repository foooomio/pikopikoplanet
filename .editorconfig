root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.ttl]
indent_size = 4

# Exclude Fuseki
[fuseki/*]
indent_size = unset

[fuseki/webapp/WEB-INF/web.xml]
indent_size = unset
trim_trailing_whitespace = unset
